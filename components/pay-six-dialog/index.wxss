.pay-input-modal {
  position: absolute;
  z-index: 666;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}
.pay-input-dialog {
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}
.pay-input-body {
  position: fixed;
  z-index: 9999;
  left: 0;
  bottom: -1000rpx;
  width: 100%;
  /* transform: translateY(300rpx) !important; */
  /* transform: translateY(1000px);
  -webkit-transform: translateY(1000px); */
  background-color: white;
  transition: all .2s;
}
.hiddenInput {
  position: fixed;
  z-index: 999999;
  left: -200rpx;
   bottom: 0; 
  top: 0;
   right: -200rpx; 
   height: 10rpx; 
  color: transparent;
  user-select: none;
}

.body-header {
  position: relative;
  z-index: 999;
  height: 89rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #e2e2e2;
}

.body-header .back-icon {

  position: absolute;
  z-index: 999;
  left: 30rpx;
  top: 0;
  width: 100rpx;
  height: 100%;
  
}
.back-icon text{
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 2rpx solid #aaa;
  border-width: 2rpx 0 0 2rpx;
  transform: rotate(-45deg);
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
}

.body-content {
  position: relative;
  z-index: 666;
  padding: 30rpx 30rpx 70rpx;
}
.body-content-tip {
  color: #888;
  font-size: 24rpx;
}

.password-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 98rpx;
  border: 1rpx solid #e2e2e2;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.password-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 114rpx;
  height: 100%;
  border-right: 1rpx solid #e2e2e2;
}
.pass-fill-point {
  width: 24rpx;
  height: 24rpx;
  background-color: #555;
  border-radius: 100%;
}

.password-item:last-child{
  border-right: none;
}
.forget-pass {
  display: flex;
  flex: 0 0 200rpx;
  justify-content: flex-end;
  color: #ff7800;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.pay-six {
  width: 100%;
}