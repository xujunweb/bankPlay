
.content{
  background: #fff;
  overflow: hidden;
  text-align: center;padding-bottom: 50rpx;
}
.order{
  margin-top: 60rpx;
  font-size: 36rpx;
  color: #888;
}
.money{
  margin-top: 40rpx;
  font-size: 50rpx;color: #222;font-weight: bold;
}
.button{
  margin-top: 50rpx;
}


/* 弹窗区域 */
.playModal{
  transform: all 0.3s;
}
.playModal .popup_bg{
  position: fixed;top: 0;left: 0;width: 100%;height: 100%;
  background-color: rgba(0,0,0,0.5);z-index: 1;
}
.playModal .popup_cont{
  position: fixed;top: 0;left: 0;width: 100%;height: 100%;
  z-index: 2;display: flex;align-items: center;justify-content: center;
}
.playModal .popup_cont .pop-div{
  background: #fff;border-radius: 10rpx;
  min-width: 500rpx;
}
.playModal .popup_cont .pop-div .title{
  text-align: center;position: relative;font-size: 28rpx;
  color: #222;line-height: 90rpx;border-bottom: 1rpx solid #e6e6e6;
}
.playModal .popup_cont .pop-div .title image{
  position: absolute;left: 20rpx;top: 35rpx;
  width: 20rpx;height: 20rpx;
}
.playModal .popup_cont .pop-div .pop-order{
  font-size: 26rpx;text-align: center;margin-top: 20rpx;
}
.playModal .popup_cont .pop-div .pop-money{
  font-size: 30rpx;text-align: center;margin-top: 20rpx;
  font-weight: bold;
}
.playModal .popup_cont .pop-div .btn{
  border-top: 1rpx solid #e6e6e6;margin-top: 20rpx;
  font-size: 26rpx;color: #222;padding-left: 30rpx;
  line-height: 80rpx;
}